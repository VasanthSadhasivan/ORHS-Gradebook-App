<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mainPortion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <ImageButton
            android:id="@+id/revertButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_restore_white_48dp"/>
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/assignmentName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="7"
            android:padding="10dp"
            android:text="ahasidsdsdsdsdd"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/assignmentOutOf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:padding="10dp"
            android:text="ahasidsdsdsdsdd"
            android:textColor="@android:color/white"
            android:textSize="10sp" />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/assignmentPercentage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:padding="10dp"
            android:text="ahasidsdsdsdsdd"
            android:textColor="@android:color/white"
            android:textSize="10sp" />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/assignmentIsGraded"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:padding="10dp"
            android:text="ahasidsdsdsdsdd"
            android:textColor="@android:color/white"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/addButton"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/ic_add_circle_white_48dp" />

            <ImageButton
                android:id="@+id/subtractButton"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/ic_remove_circle_white_48dp" />
        </LinearLayout>

    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainPortion"
        />
</RelativeLayout>