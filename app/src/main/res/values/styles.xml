<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/NiceTextView</item>
        <item name="android:buttonStyle">@style/NiceButtonView</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>
    <style name="NiceTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">smallcaps</item>
    </style>
    <style name="NiceButtonView" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">smallcaps</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="android:textViewStyle">@style/NiceTextView</item>
        <item name="android:buttonStyle">@style/NiceButtonView</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textViewStyle">@style/NiceTextView</item>
        <item name="android:buttonStyle">@style/NiceButtonView</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textViewStyle">@style/NiceTextView</item>
        <item name="android:buttonStyle">@style/NiceButtonView</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

</resources>
